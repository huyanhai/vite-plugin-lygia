{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "outDir": "src",
    "declarationDir": "src",
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules/*"]
}
